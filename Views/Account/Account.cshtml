<section>
    <div class="account-header">
        <img class="account-pfp"
            src="https://upload.wikimedia.org/wikipedia/en/a/a4/Hide_the_Pain_Harold_%28Andr%C3%A1s_Arat%C3%B3%29.jpg"
            alt="account-pfp">
        <div class="account-info">
            <h2>Harold</h2>
            <p>Account Bio Goes Here</p>
        </div>
    </div>   
</section>
<div class="row">
    <div class="col">
        <h1>My Post(s)</h1>
        <div class="post-list">
            @*post template*@
            <div class="post-card">
                <img class="post-img"
                src="https://images.contentstack.io/v3/assets/bltcedd8dbd5891265b/bltfc207f0f782976b1/6670821ec00ba0921486e3d2/backyard-party-hero-1.jpg"
                alt="post-img">
                <div class="post-info">
                    <h2>Post Title</h2>
                    <p>Post Descriptions</p>
                </div>
                <button type="button" class="post-redirect">See Details</button>
            </div>
            @*post template*@
            <div class="post-card">
                <img class="post-img"
                src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRLhPyR8vrk3u_upM2IwsTGlHGR5o4quBBz8Q&s"
                alt="post-img">
